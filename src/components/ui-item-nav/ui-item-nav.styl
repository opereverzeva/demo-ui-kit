.ui-item-nav
    background-color #fff
    cursor pointer
    width 335px
    height 65px
    border-bottom: 1px solid #E5E5E5
    border-top: 1px solid #E5E5E5
    border-left none
    border-right: none
    display flex
    align-items: center
    justify-content: space-between
    padding 0
    &__icon
        width 23px
        height 23px
        color: var(--black-color)
        margin-right 15px
        float left
        flex-grow 0
        &_more
            width 15px
            height 15px
            color: var(--black-color)
            margin-right 10px
            float right
            transform: rotate(-90deg)
            color: #C1C6CA;
    &__text
        text-decoration none
        font-family var(--roboto-font)
        font-size: 17px
        color: var(--black-color)
        float left
        flex-grow 1
        text-align left
