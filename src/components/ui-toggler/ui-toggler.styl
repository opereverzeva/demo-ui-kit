.ui-toggler
    display flex
    width 50px
    height 30px
    position relative
    &__display
        width 50px
        height 30px
        background: #C1C6CA;
        border-radius: 200px
        position relative
        transition: 0.5s linear
        pointer-events: none
        &::after
            content: ''
            display inline-block
            position: absolute
            width 26px
            height 26px
            border-radius: 50%
            background: #FFFFFF;
            border: 0.5px solid #C1C6CA;
            box-sizing: border-box;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);
            left 2px
            top 2px
            transition: 0.3s linear
    &__checkbox
        position: absolute
        width 100%
        height 100%
        opacity 0
        cursor pointer
    &__checkbox:checked + &__display
        background: var(--main-gradient)
        transition: 0.5s linear
    &__checkbox:checked +&__display::after
        content: ''
        display inline-block
        position: absolute
        width 26px
        height 26px
        border-radius: 50%
        background: #FFFFFF;
        border: 0.5px solid #C1C6CA;
        box-sizing: border-box;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);
        left 22px
        transition: 0.3s linear
            

